  /* New Navbar Design */
  .navbar{
    display : flex;
    align-items: center;
    justify-content:space-evenly;
    height:  4rem;
    border-bottom : .5px solid rgb(227, 225, 225);
    position: relative;
  }

  .nav-element{
    display : flex;
    gap : 1rem;
  }
  .nav-link{
    font-size: .8rem;
  }
  .nav-toggler i{
    font-size : 1.5rem;
    color : #fe424d;
    transition: all 0.3s ;
    display : none;
  }
  .nav-toggler :active{
    color : rgb(40, 38, 38);
    transform: rotate(360deg);
  }
  .search-input{
    border-radius: 25px;
    padding : 0.5rem 1rem 0.5rem 1rem;
    font-size : 1rem;  
    }
    .search-btn {
    background-color: #fe424d;
    color: #fff;
    font-size : 1rem;
    border-radius: 25px;
    padding: 0 .5rem 0 .5rem;
    width : 8rem;
  } 

  @media screen and (max-width : 756px){
    .nav-toggler i{
      display: block;
    }
    .nav-search{
      display : none;
    }
    .nav-element{
      display : none  ;
      flex-direction : column ;
      position : absolute;
      top : 4rem;
      overflow : hidden;
      text-align: center;
      width : 100vw;
      background-color :#fff;
      z-index: 1000;
      transition: all 0.3s ;  
      }
    .nav-element a{
      padding : 10px; 
      border-bottom : .1px solid rgb(198, 175, 175);
    }
    .nav-element .nav-link:hover{
      color: #fe424d !important;
    }
    .show{
      display : block;
    }

  }
</style>


<nav class="navbar">
  <div class="container-fluid">
    <a href="/listings"><i class="fa-regular fa-compass"></i
      ></a>
  
  <div class="nav-search">
    <form class="d-flex" role="search">
      <input
        class="form-control me-2 search-input"
        type="search"
        placeholder="Search destinations"
        aria-label="Search"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i> Search
      </button>
    </form>
  </div>
  <div class="nav-toggler" onclick="showNav()">
    <i class="fa-solid fa-bars"></i>
  </div>
  <div class="nav-element" id="menuList">
    <a class="nav-link" href="/listings">Explore</a>
    <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser){ %>
     
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %> <% if(currUser){ %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% }%>
  </div>
</div>
</nav>

<script>
  const menuToggle = document.getElementsByClassName("nav-toggler");
  const navLinks = document.getElementById("menuList");
   function showNav(){
    navLinks.classList.toggle("show");
  }
</script>

